{
  "extends": "ts-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["./types/index"],
    "paths": {
      "~/*": ["src/*"]
    },
    "declaration": false
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**","**/lib/**"]
}
