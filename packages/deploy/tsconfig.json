{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "skipLibCheck": true,
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types",
    ],
    "types": [
      "node",
      "./types/"
    ],
    "paths": {
      "~/*": ["src/*"],
    },
    "declaration": false
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
