{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
    },
    "declaration": true
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
